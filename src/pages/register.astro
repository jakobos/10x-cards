---
import Layout from "@/layouts/Layout.astro";
import RegisterForm from "@/components/auth/RegisterForm";
---

<Layout title="Zarejestruj się - 10x Cards">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-8rem)] py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Rozpocznij swoją przygodę</h1>
        <p class="text-muted-foreground">Stwórz konto i zacznij naukę z fiszkami AI</p>
      </div>

      <RegisterForm client:load />
    </div>
  </div>
</Layout>
