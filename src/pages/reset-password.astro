---
import Layout from "@/layouts/Layout.astro";
import ResetPasswordForm from "@/components/auth/ResetPasswordForm";
---

<Layout title="Resetuj hasło - 10x Cards">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-8rem)] py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Nie pamiętasz hasła?</h1>
        <p class="text-muted-foreground">Nie martw się, pomożemy Ci je odzyskać</p>
      </div>

      <ResetPasswordForm client:load />
    </div>
  </div>
</Layout>
