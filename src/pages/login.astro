---
import Layout from "@/layouts/Layout.astro";
import LoginForm from "@/components/auth/LoginForm";

export const prerender = false;
---

<Layout title="Zaloguj się - 10x Cards">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-8rem)] py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Witaj ponownie</h1>
        <p class="text-muted-foreground">Zaloguj się, aby kontynuować naukę</p>
      </div>

      <LoginForm client:load />
    </div>
  </div>
</Layout>
