---
import Layout from "@/layouts/Layout.astro";
import UpdatePasswordForm from "@/components/auth/UpdatePasswordForm";
---

<Layout title="Ustaw nowe hasło - 10x Cards">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-8rem)] py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Ustaw nowe hasło</h1>
        <p class="text-muted-foreground">Wprowadź nowe hasło dla swojego konta</p>
      </div>

      <UpdatePasswordForm client:load />
    </div>
  </div>
</Layout>
